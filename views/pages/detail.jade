extends ../layout.jade

block content
	.container
		.row
			.col-md-7
				embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="400",align="middle",type="application/x-shockwave-flash")
			.col-md-5
				dl.dl-horizontal
					dt film name
					dd= movie.title
					dt Director
					dd= movie.director
					dt country
					dd= movie.country
					dt language
					dd= movie.language
					dt Release Year
					dd= movie.year
					dt Summary
					dd= movie.summary

